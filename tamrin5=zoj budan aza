//bazgashti tashkhis zoj budan azaye araye
#include<iostream>
using namespace std;
int tedad_zoj(int* numbers,int s,int cnt)
{
    if(s==-1)
        return cnt;
    if(numbers[s]%2==0)
        cnt++;
    return tedad_zoj(numbers,s-1,cnt);
}
int main()
{
    int n;cin>>n;
    int numbers[n];
    for(int i=0;i<n;i++)
    {
        cin>>numbers[i];
    }
    cout<<tedad_zoj(numbers,n-1,0);
    return 0;
}
