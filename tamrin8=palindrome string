//recursive function of palindrome string
#include<iostream>
using namespace std;
int palindrome(string p,int l,int a,int k)
{
    if(a==l)
    {
        if(k==1)
            return 1;
        return 0;
    }
    else if(a>=(l/2))
    {
        if(k==0)
            return 0;
        return 1;
    }
    else
    {
        if(p[a]!=p[l])
        {
            k=0;
        }
    }
    return palindrome(p,l-1,a+1,k);
}
int main()
{
    string s;cin>>s;
    int length=s.length();
    cout<<palindrome(s,length-1,0,1);
    return 0;
}
